<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.quoctuan.activity.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Che khuất toàn bộ màn hình"
        android:id="@+id/btnCheKhuatToanBo"
        android:onClick="xuLyCheKhuatToanBo"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCheKhuatToanBo"
        android:id="@+id/btnCheKhuatMotPhan"
        android:text="Che khuất một phần"
        android:onClick="xuLyCheKhuatMotPhan"
        />

</RelativeLayout>
